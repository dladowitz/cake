<div id="location-signups-confirmation">
  <div class="heading">
  	<div class="">
      <span class="col-xs-2 fa fa-2x fa-birthday-cake icon"></span>
      <span class="col-xs-10 thanks">
        Thanks! A confirmation e-mail is coming your way.
      </span>
    </div>
  	<hr width="25%">
  	<p>Check out some of these other businesses you may like.</p>
  </div>

  {{#each locations}}
    <div class="row">
      <a href="/locations/{{this.id}}">
        <div class="business" style="background-image: url({{this.img_url}})">
          <div class="description">
            <div class="title">
              {{this.name}}
            </div>
            <div class="dist">
              4.2 mi away
            </div>
          </div>
        </div>
      </a>    
    </div>
  {{/each}}

</div>
